<%-include('../partials/header')-%>

<div class="container">
	<h1 class="text-center mb-4">Edit Comment</h1>
	<div class="mx-auto" style="width: 30%;">
		<form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>" autocomplete="off">
			</div>
			<button type="submit" class="btn btn-primary btn-block mb-2">Submit</button>
		</form>
		<p><a href="/campgrounds/<%= campground_id %>">Go back</a></p>
	</div>			
</div>

<%-include('../partials/footer')-%>