<%- include('./partials/header') %>

<div class="container">
	<h1 class="text-center my-4">Sign Up</h1>
	<div class="mx-auto" style="width: 30%;">
		<form action="/register" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="user[username]" placeholder="username" autocomplete="off">
			</div>
			<div class="form-group">
				<input class="form-control" type="password" name="password" placeholder="password" autocomplete="off">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="user[firstname]" placeholder="firstname" autocomplete="off">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="user[lastname]" placeholder="lastname" autocomplete="off">
			</div>
			<div class="form-group">
				<input class="form-control" type="email" name="user[email]" placeholder="email" autocomplete="off">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="user[avatar]" placeholder="avatar url" autocomplete="off">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="adminCode" placeholder="admin code" autocomplete="off">
			</div>
			<button type="submit" class="btn btn-primary btn-block mb-3">Sign up</button>
		</form>
		<a href="/campgrounds">Go Back</a>
	</div>
</div>



<%- include('./partials/footer') %>